<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context="com.nearur.payrec.Piecerate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            app:met_iconRight="@drawable/search"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/skyblue"
            android:hint="Employee Name"
            app:met_floatingLabelTextSize="16dp"
            app:met_floatingLabelText="Employee Name"
            android:id="@+id/salarysearch"/>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/listsalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
